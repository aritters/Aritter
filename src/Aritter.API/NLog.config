<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true" >
    <targets>
        <target name="FileTarget" xsi:type="File" fileName="C:\logs\${lowercase:${logger}}-${shortdate}.log" layout="${longdate}|${uppercase:${machinename}}|${uppercase:${level}}|${message}" />
        <target name="DebugTarget" xsi:type="OutputDebugString" layout="${longdate}|${uppercase:${machinename}}|${uppercase:${level}}|${message}" />
    </targets>
    <rules>
        <logger name="*" minlevel="Trace" writeTo="FileTarget" />
        <logger name="*" minlevel="Trace" writeTo="DebugTarget" />
    </rules>

</nlog>